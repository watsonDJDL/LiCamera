<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remix_panel"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/function_btn_container"
        android:layout_alignParentLeft="true">
        <TextView
            android:text="原声音量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"/>
        <SeekBar
            android:max="100"
            android:id="@+id/video_sound_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:progressDrawable="@drawable/bg_adjust_seek_bar"
            android:layout_marginTop="5dp"/>
        <TextView
            android:text="音乐音量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"/>
        <SeekBar
            android:max="100"
            android:id="@+id/music_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:progressDrawable="@drawable/bg_adjust_seek_bar"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/choose_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/choose_music"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="选择音乐"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/remix_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/remix"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="混音"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>