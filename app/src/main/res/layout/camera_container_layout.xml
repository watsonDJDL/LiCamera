<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/camera_fragment_root_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView android:id="@+id/camera_switch_btn"
    android:layout_height="40dp"
    android:layout_width="40dp"
    android:layout_gravity="top|right"
    android:src="@mipmap/switch_camera" />

  <ImageView android:id="@+id/frame_switch_btn"
      android:layout_height="40dp"
      android:layout_width="40dp"
      android:layout_gravity="top|center_horizontal"
      android:src="@mipmap/beauty_icon" />

  <Button
    android:id="@+id/take_picture_btn"
    android:text="@string/take_picture_btn"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal|bottom" />

  <Button
    android:id="@+id/record_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|bottom"
    android:text="@string/start_record_btn"/>

  <com.linfeng.licamera.camera.CameraViewGroup
    android:id="@+id/camera_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</FrameLayout>